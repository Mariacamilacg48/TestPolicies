@model IEnumerable<GAPTest.Web.Data.Entities.Policy>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>


<div class="panel-body">
    <table class="table table-hover table-responsive table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PolicyName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PolicyStartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CoveringPeriod)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
               
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PolicyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PolicyStartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CoveringPeriod)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
            </tr>
            }
        </tbody>
    </table>
    </div>
